.container{
    padding: 0 30rpx;
}
.title{
    color: #ffcd32;
    font-size: 36rpx;
    text-align: center;
    padding: 30rpx 0 10rpx;
}
.title text{
    font-size: 28rpx;
}
.list{
    padding: 30rpx 0;
    border-bottom: 1rpx solid #14161B;
}
.list-nick{
    display: flex;
    align-items: center;
}
.list-nick text{
    flex: 1;
}
.avatar{
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
    margin-right: 20rpx;
}
.icon-delete{
    width: 50rpx;
    height: 50rpx;
}
.list-content{
    text-indent: 80rpx;
    padding-bottom: 20rpx;
    color: #ffcd32;
}
.list-time{
    text-align: right;
    padding-right: 20rpx;
    font-size: 22rpx;
    color: #8e8e93;
}
.empty{
    color: #b4b4b3;
    text-align: center;
    padding-top: 30rpx;
}
.info{
    text-align: center;
    height: 60rpx;
    line-height: 60rpx;
}