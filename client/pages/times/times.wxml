<view>
  <view
    class="title">
    <image
      class="mine"
      src="../../images/icon/mine4.png"
      bindtap="goUserCenter" />
    <text>定不负好时光</text>
    <image
      class="present"
      src="../../images/icon/present.png"
      bindtap="toPresent" />
  </view>
  <input type="text" />
  <view class="list" wx:for="{{timesList}}" wx:key="item.id">
    <view class="nick">
      <image src="{{item.avatarUrl}}" />
      <view class="user-info">
        <text>{{item.nickName}}</text>
        <text>发表于{{item.present_time}}</text>
      </view>
    </view>
    <view class="container">
      <rich-text class="content" nodes="{{item.content}}"></rich-text>
      <view class="pic" wx:if="{{item.pic}}">
        <image 
          class="image-item"
          wx:for="{{item.pic}}"
          wx:for-item="img"
          wx:key="{{img}}"
          mode="aspectFill"
          src="{{img}}" 
          bindtap="viewImage" 
          data-src="{{img}}"
          data-urls="{{item.pic}}" />
      </view>
    </view>
    <view class="rate">
      <image
        src="../../images/icon/rate2.png"
        bindtap="goDetail"
        data-id="{{item.id}}" />
    </view>
  </view>
  <view class="info">{{info}}</view>
</view>