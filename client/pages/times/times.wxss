swiper{
    height: 350rpx;
}
.swiper-container image{
    width: 100%;
    height: 350rpx;
}
.title{
    color: #ffcd32;
    font-size: 28rpx;
    padding: 40rpx 0;
    text-align: center;
}
.scroll-list{
    display: flex;
    padding: 0 40rpx 40rpx;
}
.scroll-list image{
    width: 120rpx;
    height: 120rpx;
}
.scroll-list view{
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    margin-left: 40rpx;
}
.scroll-list view text:first-of-type{
    color: #fff;
}
.scroll-list view text:last-of-type{
    color: hsla(0,0%,100%,.3);
}