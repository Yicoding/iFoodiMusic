<view>
  <view class="header">{{article.title}}</view>
  <view class="time">{{article.presentTime}}</view>
  <view class="rich">
    <rich-text class="content" nodes="{{article.content}}"></rich-text>
  </view>
  <view class="split"></view>
  <view class="rate-container">
    <view class="title">全部评论<text>({{rateList.length}})</text></view>
    <block wx:if="{{rateList.length}}">
      <view
        class="list"
        wx:for="{{rateList}}"
        wx:key="{{item.id}}">
          <view class="list-nick">
            <image
              class="avatar"
              src="{{item.avatarUrl}}"
              bindtap="goUserCenter"
              data-openid="{{item.openid}}"
              data-nickname="{{item.nickName}}"
              data-avatarurl="{{item.avatarUrl}}" />
            <text>{{item.nickName}}</text>
            <image
              wx:if="{{item.isMine}}"
              class="icon-delete"
              src="../../images/icon/delete.png"
              bindtap="removeRate"
              data-id="{{item.id}}" />
          </view>
          <view class="list-content">{{item.content}}</view>
          <view class="list-time">{{item.presentTime}}</view>
      </view>
    </block>
    <view wx:else class="empty">还没有人评论呦，快来抢沙发吧(*^▽^*)</view>
  </view>
  <view class="rate-input" style="bottom: {{keyHeight}}px">
    <input
      class="input"
      type="text"
      value="{{text}}"
      placeholder="我也来凑凑热闹(*^▽^*)"
      adjust-position="{{false}}"
      confirm-type="send"
      bindinput="textChange"
      bindfocus="keyFocus"
      bindblur="keyBlur"
      bindconfirm="send" />
      <text class="send" bindtap="send">发送</text>
  </view>
</view>