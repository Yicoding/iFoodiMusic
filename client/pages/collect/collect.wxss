.header{
    display: flex;
    justify-content: center;
    align-items: center;
    height: 180rpx;
    background: #333;
}
.avatar{
    width: 150rpx;
    height: 150rpx;
    border-radius: 50%;
}
.btn-play{
    color: #ffcd32;
    font-size: 30rpx;
    margin-left: 15rpx;
    padding: 10rpx 25rpx;
    border: 1rpx solid #ffcd32;
    border-radius: 40rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}
.info{
    margin-left: 10rpx;
}
.container{
    padding: 40rpx 60rpx;
}
.list{
    margin-bottom: 30rpx;
}
.list view:first-of-type{
    margin-bottom: 10rpx;
}
.list view:last-of-type{
    color: hsla(0,0%,100%,.3);
}
.empty{
    text-align: center;
}