<view>
  <view class="header">
    <image class="avatar" src="{{poster}}"/>
    <view class="btn-play" bindtap="randomPlay">
      <text class="icon-play"></text>
      <text class="info">随心所动一首歌</text>
    </view>
  </view>
  <view class="container">
    <view
      wx:for="{{songList}}" 
      wx:key="{{item.id}}"
      class="list"
      bindtap="play"
      data-type="{{item}}"
      data-index="{{index}}"
    >
      <view>{{item.name}}</view>
      <view>{{item.author}}</view>
    </view>
  </view>
  <navigator 
    wx:if="{{showNavigator}}" 
    bind:pauseSwitch="pauseSwitch" 
    bind:myevent="stopMusic" 
    songInfo="{{songInfo}}" 
    stateIcon="{{stateIcon}}" />
</view>