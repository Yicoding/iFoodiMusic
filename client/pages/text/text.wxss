page{
    background: #1E1E26;
    padding-bottom: 100rpx;
}
.text{
    padding: 30rpx;
    box-sizing: border-box;
}
.nick{
    display: flex;
}
.nick>image{
    width: 100rpx;
    height: 100rpx;
    border-radius: 5rpx;
    margin-right: 20rpx;
}
.user-info{
    display: flex;
    flex-direction: column;
    justify-content: space-around;
}
.user-info text:last-of-type{
    font-size: 20rpx;
    color: #8e8e93;
}
.container{
    margin: 20rpx 0;
}
.content{
    text-indent: 50rpx;
}
.emoji{
    width: 40rpx;
    height: 40rpx;
    margin: 0 5rpx;
}
.pic{
    margin-top: 20rpx;
}
.image-item{
    display: inline-block;
    width: 220rpx;
    height: 220rpx;
    margin-right: 10rpx;
    box-sizing: border-box;
}
.split{
    height: 20rpx;
    background: #14161B;
}
.rate-container{
    padding: 30rpx;
    box-sizing: border-box;
}
.title{
    color: #ffcd32;
    font-size: 36rpx;
    text-align: center;
    padding: 10rpx 0;
}
.title text{
    font-size: 28rpx;
}
.list{
    padding: 20rpx 0;
    border-bottom: 1rpx solid #14161B;
}
.list-nick{
    display: flex;
    align-items: center;
}
.list-nick text{
    flex: 1;
}
.avatar{
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
    margin-right: 20rpx;
}
.icon-delete{
    width: 50rpx;
    height: 50rpx;
}
.list-content{
    text-indent: 80rpx;
    padding-bottom: 20rpx;
    color: #ffcd32;
}
.list-time{
    text-align: right;
    padding-right: 20rpx;
    font-size: 22rpx;
    color: #8e8e93;
}
.empty{
    color: #b4b4b3;
    text-align: center;
    padding-top: 30rpx;
}
.rate-input{
    background: #14161B;
    padding: 10rpx 20rpx;
    box-sizing: border-box;
    position: fixed;
    width: 100%;
    display: flex;
    align-items: center;
}
.input{
    background: #fff;
    border-radius: 5rpx;
    padding: 0 20rpx;
    height: 70rpx;
    position: relative;
    z-index: 9;
    color: #333;
    flex: 1;
}
.send{
    height: 70rpx;
    line-height: 70rpx;
    margin-left: 10rpx;
    padding: 0 40rpx;
    background: #DEDEDE;
    color: rgba(0, 0, 0, 0.6);
    border-radius: 8rpx;
}
