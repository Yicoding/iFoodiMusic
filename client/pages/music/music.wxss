swiper{
    height: 350rpx;
}
.swiper-container image{
    width: 100%;
    height: 350rpx;
}
.title{
    color: #ffcd32;
    font-size: 28rpx;
    height: 110rpx;
    line-height: 110rpx;
    text-align: center;
    position: relative;
}
.favourite{
    width: 70rpx;
    height: 70rpx;
    border-radius: 50%;
    position: absolute;
    right: 30rpx;
    top: 50%;
    margin-top: -35rpx;
}
.scroll-list{
    display: flex;
    padding: 0 40rpx 40rpx;
}
.scroll-list image{
    width: 120rpx;
    height: 120rpx;
}
.scroll-list view{
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    margin-left: 40rpx;
}
.scroll-list view text:last-of-type{
    color: hsla(0,0%,100%,.3);
}