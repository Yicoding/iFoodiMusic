<view>
  <view class="cover-container">
    <image src="{{coverImg}}" class="cover"/>
  </view>
  <view class="container">
    <view
      wx:for="{{songList}}" 
      wx:key="{{item.id}}"
      class="list"
      bindtap="play"
      data-type="{{item}}"
      data-index="{{index}}"
    >
      <view>{{item.name}}</view>
      <view>{{item.author}}</view>
    </view>
  </view>
</view>