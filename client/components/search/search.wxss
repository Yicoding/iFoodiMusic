.container{
    background: #2a2a2a;
    height: 100rpx;
    padding: 0 10rpx 0 20rpx;
    display: flex;
    align-items: center;
    position: relative;
}
.input{
    background: #fff;
    border-radius: 5rpx;
    padding: 0 20rpx 0 70rpx;
    color: #333;
    flex: 1;
    height: 65rpx;
}
.icon-search{
    width: 40rpx;
    height: 40rpx;
    position: absolute;
    top: 50%;
    left: 40rpx;
    margin-top: -20rpx;
}
.cancel{
    margin-left: 10rpx;
    color: aqua;
    font-size: 30rpx;
}
.icon-user{
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
    margin-left: 10rpx;
}
